# Server Configuration
HOST=0.0.0.0
PORT=8081

# ScyllaDB Configuration
SCYLLA_NODES=127.0.0.1:9042
SCYLLA_KEYSPACE=fhir_store
SCYLLA_USERNAME=
SCYLLA_PASSWORD=

# Backend Configuration
BACKEND_URL=http://localhost:5000/api/fhir
BACKEND_TIMEOUT_SECS=30
BACKEND_MAX_RETRIES=5
BACKEND_INITIAL_BACKOFF_MS=100
BACKEND_MAX_BACKOFF_MS=60000

# Retry Worker Configuration
RETRY_WORKER_INTERVAL_SECS=60
RETRY_WORKER_BATCH_SIZE=100

# Performance Tuning
HTTP_WORKERS=8
HTTP_MAX_CONNECTIONS=256
HTTP_KEEP_ALIVE_SECS=75

# Logging
RUST_LOG=info,fhir_server=debug
